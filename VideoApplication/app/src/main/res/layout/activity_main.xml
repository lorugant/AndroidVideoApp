<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lalit.videoapplication.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Capture Video"
        android:onClick="captureVideo" />

    <Button
        android:id="@+id/startPickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:text="Pick file to onedrive"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/saver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save File to One drive"
        android:layout_below="@+id/startPickerButton"
        android:layout_alignStart="@+id/startPickerButton"
        android:layout_marginTop="36dp" />


    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_below="@+id/saver"
    android:textSize="20dp"
    android:id="@+id/pic_name" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/pic_name"
    android:id="@+id/pic_link"
    android:textSize="20dp" />


</RelativeLayout>
